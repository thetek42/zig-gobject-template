using Gtk 4.0;

Gtk.ShortcutsWindow shortcuts_window {
  modal: true;

  Gtk.ShortcutsSection {
    section-name: "shortcuts";
    max-height: 5;

    Gtk.ShortcutsGroup {
      title: _("General");

      Gtk.ShortcutsShortcut {
        accelerator: "<primary>Q";
        title: _("Quit");
      }
    }
  }
}
